generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String         @id @default(uuid())
  name       String
  email      String         @unique
  password   String
  role       Role           @default(USER)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  clockInsOuts ClockInOut[]
  lunchBreaks  LunchBreak[]

  @@map("users")
}

model ClockInOut {
  id               String   @id @default(uuid())
  userId           String
  clockIn          DateTime
  clockOut         DateTime?
  lunchBreakId     String?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id])
  lunchBreak       LunchBreak? @relation(fields: [lunchBreakId], references: [id])

  @@map("clock_in_outs")
}

model LunchBreak {
  id               String   @id @default(uuid())
  userId           String
  lunchBreakStart  DateTime
  lunchBreakEnd    DateTime?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id])
  clockInOuts      ClockInOut[]

  @@map("lunch_breaks")
}

enum Role {
  ADMIN
  USER
}
